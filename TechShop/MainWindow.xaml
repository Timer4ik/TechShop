<Window x:Class="TechShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <Grid Background="{StaticResource akcent}" DockPanel.Dock="Top" Height="80">
            <TextBlock Text="TechShop" Foreground="White"/>
        </Grid>
        <Grid Background="{StaticResource additional}" Width="200">
            <StackPanel Grid.Row="1" Margin="0 0 20 0">
                <Button Content="Комплектующие" Style="{StaticResource sidebar_button}"/>
                <Button Content="Компьютеры" Style="{StaticResource sidebar_button}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Background="{StaticResource akcent}"/>

        <Frame x:Name="MainFrame" Grid.Row="1"/>
        

    </DockPanel>
</Window>
